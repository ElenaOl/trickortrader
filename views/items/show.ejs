<div class="container-fluid">
        <div class="col-xs-12 banner">
            <h2><%=listName%>'s List</h2>
          </div>

    <div class="row buttons">
      <div class="col-xs-12 col-sm-10">
        <a href="/list/<%=listId%>/share" class="btn btn-info orange">Share this list</a>
      </div>
      <div class="col-xs-12 col-sm-2">
        <a href="/item/addItem/<%=listId%>" class="btn btn-success add orange">Add Item</a>
      </div>
    </div>
 </div>

<% items.forEach(function(item) { %>
<div class="container-fluid well">
    <div class="row">
      <div class="col-xs-1">
          <a href="/item/edit/<%= item.itemName %>" class="btn btn-info glyphicon glyphicon-edit"></a>
      </div>
      <div class="col-xs-2">    
          <h4><%= item.itemName %></a></h4>
      </div>   
      <div class="col-xs-9"> 
          <h4><span><%= item.amount %></span></h4>
      </div> 
    </div>
    <div class="row">
      <div class="col-xs-12">
          <h4><span><%= item.comment %></span></h4>
      </div>  
    </div>   
</div>

<% }); %>

