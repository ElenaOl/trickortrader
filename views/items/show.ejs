<div class="container-fluid">
  <div class="col-xs-12 banner">
      <h2><%=listName%>'s List</h2>
    </div>

<div class="row buttons">
<div class="col-xs-6">
  <a href="/list/<%=listId%>/share" class="btn btn-info orange">Share this list</a>
</div>
<div class="col-xs-3">
  <a href="/item/addItem/<%=listId%>" class="btn btn-success add orange">Add Item</a>
</div>
</div>
</div>

<% items.forEach(function(item) { %>
<div class="container-fluid">
<div class="row">
<div class="col-xs-12">
  <table>
    
    <td class='editor'><a href="/item/edit/<%= item.itemName %>" class="btn btn-info glyphicon glyphicon-edit"></a></td>
    <td class='items'><h4><%= item.itemName %></a></h4></td>
    <td class='amount'> <h4><span><%= item.amount %></span></h4></td>
  </table>
  
  
</div>
<div class="col-xs-8 col-sm-2 col-md-2 col-lg-2">
  
</div>
<div class="col-xs-2 col-sm-1 col-md-1 col-lg-1">
 
</div>
</div>
</div>
<% }); %>

